{
    "manifest_version": 3,
    "name": "another share extension",
    "version": "0.1.8.0",
    "description": "A native-feeling article sharing extension.",
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'none'; frame-src 'none';"
    },
    "permissions": [
        "activeTab",
        "scripting",
        "menus",
        "storage",
        "tabs"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "options_ui": {
        "page": "options/options.html",
        "open_in_tab": true
    },
    "icons": {
        "48": "icons/icon-48.png",
        "96": "icons/icon-96.png",
        "128": "icons/icon-128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "js/logger.js",
                "content.js"
            ],
            "run_at": "document_start"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "js/inject.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "background": {
        "scripts": [
            "js/logger.js",
            "background.js"
        ]
    },
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "48": "icons/icon-48.png",
            "96": "icons/icon-96.png",
            "128": "icons/icon-128.png"
        }
    },
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+L"
            }
        }
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "another-share-screenshot@ovidio.me",
            "strict_min_version": "142.0",
            "data_collection_permissions": {
                "required": [
                    "none"
                ]
            }
        }
    }
}